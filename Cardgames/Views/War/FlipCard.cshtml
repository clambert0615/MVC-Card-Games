@model Cardgames.Models.Match

    <style>
        .column {
            float: left;
            width: 50%;
            padding: 10px;
        }
    </style>
    <br />
    <div class="row">
        <div class="column">
            <h3>Your Card:        <img src=@Model.Player1.Flipped.Image style="width:100px"></h3>
            <h3>Cards left in your hand: @Model.Player1.CardList.Count() </h3>
        </div>
        <div class="column">
            <h3>Computer's Card:  <img src=@Model.Player2.Computer.Image style="width:100px"></h3>
            <h3>Cards left in computer's hand: @Model.Player2.CardList.Count() </h3>
        </div>
    </div>
    <br />
    <h2 style="color:red">@Model.Message</h2>

    <br />
    <h3>Click the button to turn over a card</h3>
    <br />

    @{
        var card = Model.Player1.CardList[0];
    }
    <input type="button" value="Flip" onclick="location.href='/War/FlipCard?value=@card.Value'" />
