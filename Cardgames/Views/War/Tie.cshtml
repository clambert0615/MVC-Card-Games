@model Cardgames.Models.Match

    <h3 style="text-align:center; color:red"> You Tied!  Time for war</h3>
    <br />
    <style>
        .column {
            float: left;
            width: 50%;
            padding: 10px;
        }
    </style>
    <br />
    <div class="row">
        <div class="column">

            <h3>Your Card:        <img src=@Model.Player1.Flipped.Image style="width:100px"> </h3>
            <h3>Cards left in your hand: @Model.Player1.CardList.Count() </h3>
        </div>
        <div class="column">
            <h3>Computer's Card:  <img src=@Model.Player2.Computer.Image style="width:100px"> </h3>
            <h3>Cards left in computer's hand: @Model.Player2.CardList.Count() </h3>
        </div>
    </div>
    <br />
    <h3>Click the button to go to war and see the results:</h3>
    <br />

    @{
        var card = Model.Player1.CardList[2];
    }
    <input type="button" value="Flip" onclick="location.href='/War/TieResult?value=@card.Value'" />
